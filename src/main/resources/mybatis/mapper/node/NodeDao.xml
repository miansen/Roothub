<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wang.miansen.roothub.modules.node.dao.NodeDao">
    <resultMap id="BaseResultMap" type="wang.miansen.roothub.modules.node.model.Node">
        <id column="node_id" jdbcType="INTEGER" property="nodeId"/>
        <result column="node_code" jdbcType="VARCHAR" property="nodeCode"/>
        <result column="node_title" jdbcType="VARCHAR" property="nodeTitle"/>
        <result column="avatar_normal" jdbcType="VARCHAR" property="avatarNormal"/>
        <result column="avatar_mini" jdbcType="VARCHAR" property="avatarMini"/>
        <result column="avatar_large" jdbcType="VARCHAR" property="avatarLarge"/>
        <result column="node_desc" jdbcType="VARCHAR" property="nodeDesc"/>
        <result column="tab_id" jdbcType="INTEGER" property="tabId"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="parent_node_code" jdbcType="VARCHAR" property="parentNodeCode"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
        <result column="is_delete" jdbcType="BIT" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        node_id, node_code, node_title, avatar_normal, avatar_mini, avatar_large,node_desc,tab_id,url,parent_node_code,create_date,update_date,is_delete
    </sql>
    <!-- 查询全部节点 -->
    <select id="selectAll" resultType="Node">
        SELECT
        	a.*
        FROM
        	node a
        where a.is_delete = 0
        <if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
    
    <!-- 根据板块查询节点 -->
    <select id="selectAllByTab" resultType="Node">
        SELECT
        	a.*
        FROM
        	node a,tab b
       	WHERE 
       		a.tab_id = b.ID
       	AND 
       		a.is_delete = 0
        <if test="tabName != null">
        	AND b.tab_name = #{tabName}
        	AND a.parent_node_code is null
        </if>
        <if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
    <!-- 根据节点编码查询节点 -->
    <select id="selectByTitle" resultType="Node">
    	SELECT
        	<include refid="Base_Column_List"/>
        FROM
        	node a
        WHERE 
        	a.node_title = #{title}
        AND 
        	a.is_delete = 0
    </select>
    
    <!-- 根据ID查询节点 -->
    <select id="selectById" resultType="Node">
    	SELECT
        	<include refid="Base_Column_List"/>
        FROM
        	node a
        WHERE 
        	a.node_id = #{id}
        AND 
        	a.is_delete = 0
    </select>
    
    <!-- 查找子节点 -->
    <select id="selectChildrenNode" resultType="Node">
    	SELECT 
    		a.* 
    	from node a
    	where a.is_delete = 0
    	<if test="nodeTitle != null">
    		and a.parent_node_code = #{nodeTitle}
    	</if>
    	<if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
     <!-- 查找相邻节点 -->
    <select id="selectAtherNode" resultType="Node">
        SELECT
        	a.*
        FROM
        	node a
        	where a.is_delete = 0
        <if test="nodeCode != null">
        	and a.node_code != #{nodeCode}
        	<if test="parentNodeCode != null">
        		AND a.parent_node_code = #{parentNodeCode}
        	</if>
        </if>
        <if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
    <!-- 查找相邻顶级节点 -->
    <select id="selectAtherParentNode" resultType="Node">
    	SELECT 
    		a.* 
    	from 
    		node a
    		where a.is_delete = 0
    	<if test="nodeCode != null">
    		and a.node_code != #{nodeCode}
    		<if test="tabId != null">
    			and a.tab_id = #{tabId} 
    			and a.parent_node_code is null
    		</if>
    	</if>
    	<if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
    
    <!-- 后台节点列表 -->
    <select id="listForAdmin" resultType="Node">
        SELECT
        	a.node_id,
        	a.node_title,
        	a.avatar_normal,
        	a.avatar_large,
        	a.node_desc,
        	a.create_date,
        	(SELECT COUNT(1) FROM topic b WHERE b.is_delete = 0 AND a.node_title = b.node_title) count_topic
        FROM
        	node a
        WHERE 
        	a.is_delete = 0
        <if test="nodeTitle != null">
        AND a.node_title LIKE '%${nodeTitle}%'
        </if>
        <if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
    
    <!-- 统计后台节点列表 -->
    <select id="count" resultType="java.lang.Integer">
    SELECT 
    	COUNT(1)
    FROM 
    	node a
    WHERE 
    	a.is_delete = 0
    <if test="nodeTitle != null">
    AND a.node_title LIKE '%${nodeTitle}%'
    </if>
    </select>

    <!-- 更新节点 -->
    <update id="update" parameterType="wang.miansen.roothub.modules.node.model.Node">
        UPDATE 
        	node
        SET 
        	node_code = #{nodeCode},
        	node_title = #{nodeTitle},
        	avatar_normal = #{avatarNormal},
        	avatar_mini = #{avatarMini},
        	avatar_large = #{avatarLarge},
        	node_desc = #{nodeDesc},
        	tab_id = #{tabId},
        	url = #{url},
        	parent_node_code = #{parentNodeCode},
        	create_date = #{createDate},
        	update_date = #{updateDate},
        	is_delete = #{isDelete}
        WHERE 
        	node_id = #{nodeId}
    </update>

    <!--添加节点-->
    <insert id="insert" parameterType="wang.miansen.roothub.modules.node.model.Node" keyProperty="node.nodeId" useGeneratedKeys="true">
        INSERT INTO node
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="node.nodeCode != null and node.nodeCode != ''">
                node_code,
            </if>
            <if test="node.nodeTitle != null and node.nodeTitle != ''">
                node_title,
            </if>
            <if test="node.avatarNormal != null and node.avatarNormal != ''">
                avatar_normal,
            </if>
            <if test="node.avatarMini != null and node.avatarMini != ''">
                avatar_mini,
            </if>
            <if test="node.avatarLarge != null and node.avatarLarge != ''">
                avatar_large,
            </if>
            <if test="node.nodeDesc != null and node.nodeDesc != ''">
                node_desc,
            </if>
            <if test="node.tabId != null and node.tabId != ''">
                node_code,
            </if>
            <if test="node.url != null and node.url != ''">
                url,
            </if>
            <if test="node.parentNodeCode != null and node.parentNodeCode != ''">
                parent_node_code,
            </if>
            <if test="node.createDate != null">
                create_date,
            </if>
            <if test="node.updateDate != null">
                update_date,
            </if>
            <if test="node.isDelete != null">
                is_delete,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="node.nodeCode != null and node.nodeCode != ''">
                #{node.nodeCode,jdbcType=VARCHAR},
            </if>
            <if test="node.nodeTitle != null and node.nodeTitle != ''">
                #{node.nodeTitle,jdbcType=VARCHAR},
            </if>
            <if test="node.avatarNormal != null and node.avatarNormal != ''">
                #{node.avatarNormal,jdbcType=VARCHAR},
            </if>
            <if test="node.avatarMini != null and node.avatarMini != ''">
                #{node.avatarMini,jdbcType=VARCHAR},
            </if>
            <if test="node.avatarLarge != null and node.avatarLarge != ''">
                #{node.avatarLarge,jdbcType=VARCHAR},
            </if>
            <if test="node.nodeDesc != null and node.nodeDesc != ''">
                #{node.nodeDesc,jdbcType=VARCHAR},
            </if>
            <if test="node.tabId != null and node.tabId != ''">
                #{node.tabId,jdbcType=INTEGER},
            </if>
            <if test="node.url != null and node.url != ''">
                #{node.url,jdbcType=VARCHAR},
            </if>
            <if test="node.parentNodeCode != null and node.parentNodeCode != ''">
                #{node.parentNodeCode,jdbcType=VARCHAR},
            </if>
            <if test="node.createDate != null">
                #{node.createDate,jdbcType=TIMESTAMP},
            </if>
            <if test="node.updateDate != null">
                #{node.updateDate,jdbcType=TIMESTAMP},
            </if>
            <if test="node.isDelete != null">
                #{node.isDelete,jdbcType=BIT},
            </if>
        </trim>
    </insert>

    <!-- 删除节点 -->
    <update id="deleteById" parameterType="java.lang.Integer">
    	UPDATE
    		node
    	SET
    		is_delete = 1
    	WHERE
    		node_id = #{id}
    </update>
    <!-- 统计当天的节点数 -->
	<select id="countToday" resultType="java.lang.Integer">
        SELECT 
        	count(1)
        FROM 
        	node a
        WHERE 
        	TO_DAYS(a.create_date) = TO_DAYS(NOW())
    </select>
</mapper>